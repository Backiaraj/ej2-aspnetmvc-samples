@using Syncfusion.EJ2;
@section ControlsSection{
    @{
        var piecenter = new
        {
            x = "50%",
            y = "50%"
        };

    }
    
        <div class="control-section" align="center">
            
                <div class="control-section">
                    @(Html.EJS().AccumulationChart("container").Series(series =>
                    {
                        series.DataLabel(dl => dl.Visible(true).Name("DataLabelMappingName").Position(Syncfusion.EJ2.Charts.AccumulationLabelPosition.Outside).Font(ft => ft.FontWeight("600")).ConnectorStyle(cs => cs.Length("20px").Type(Syncfusion.EJ2.Charts.ConnectorType.Curve)))
                            .XName("Browser")
                            .YName("Users")
                            .Name("Browser")
                            .Explode(true)
                            .ExplodeOffset("10%")
                            .ExplodeIndex(0)
                            .InnerRadius("0%")
                            .DataSource(ViewBag.ChartPoints)
                            .Add();
                    })
                        .EnableSmartLabels(true)
                        .EnableAnimation(false)
                        .Title("Browser Market Share")
                        .LegendSettings(ls => ls.Visible(false))
                        .Tooltip(tp => tp.Enable(true).Format("<b>${point.x}</b><br>Browser Share: <b>${point.y}%</b>").Header(""))
                        .Load("load").EnableBorderOnMouseMove(false).Render()
                        )
                </div>
            </div>
        
    <script>
     @*custom code start*@
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Material';
            args.accumulation.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast');
            args.accumulation.series[0].startAngle = ej.base.Browser.isDevice ? 70 : 30;
            args.accumulation.series[0].radius = ej.base.Browser.isDevice ? "40%" : "60%";
            args.accumulation.series[0].dataSource[0].Browser = ej.base.Browser.isDevice ? 'Chrome' : 'Chrome';
            args.accumulation.series[0].dataSource[1].Browser = ej.base.Browser.isDevice ? ' ' : 'UC Browser';
            args.accumulation.series[0].dataSource[2].Browser = ej.base.Browser.isDevice ? ' ' : 'Internet Explorer';
            args.accumulation.series[0].dataSource[3].Browser = ej.base.Browser.isDevice ? ' ' : 'Sogou Explorer';
            args.accumulation.series[0].dataSource[4].Browser = ej.base.Browser.isDevice ? ' ' : 'QQ';
            args.accumulation.series[0].dataSource[5].Browser = ej.base.Browser.isDevice ? 'Safari' : 'Safari';
            args.accumulation.series[0].dataSource[6].Browser = ej.base.Browser.isDevice ? 'Opera' : 'Opera';
            args.accumulation.series[0].dataSource[7].Browser = ej.base.Browser.isDevice ? 'Edge' : 'Edge';
            args.accumulation.series[0].dataSource[8].Browser = ej.base.Browser.isDevice ? 'Others' : 'Others';
            args.accumulation.series[0].dataSource[0].Users = ej.base.Browser.isDevice ? 59.28 : 59.28;
            args.accumulation.series[0].dataSource[1].Users = ej.base.Browser.isDevice ? ' ' : 4.37;
            args.accumulation.series[0].dataSource[2].Users = ej.base.Browser.isDevice ? ' ' : 6.12;
            args.accumulation.series[0].dataSource[3].Users = ej.base.Browser.isDevice ? ' ' : 1.73;
            args.accumulation.series[0].dataSource[4].Users = ej.base.Browser.isDevice ? ' ' : 3.96;
            args.accumulation.series[0].dataSource[5].Users = ej.base.Browser.isDevice ? 4.73 : 4.73;
            args.accumulation.series[0].dataSource[6].Users = ej.base.Browser.isDevice ? 6.12 : 3.12;
            args.accumulation.series[0].dataSource[7].Users = ej.base.Browser.isDevice ? 7.48 : 7.48;
            args.accumulation.series[0].dataSource[8].Users = ej.base.Browser.isDevice ? 22.39 : 9.57;
            args.accumulation.series[0].dataSource[0].DataLabelMappingName = ej.base.Browser.isDevice ? 'Chrome: 59.28%' : 'Chrome: 59.28%';
            args.accumulation.series[0].dataSource[1].DataLabelMappingName = ej.base.Browser.isDevice ? ' ' : 'UC Browser: 4.37%';
            args.accumulation.series[0].dataSource[2].DataLabelMappingName = ej.base.Browser.isDevice ? ' ' : 'Internet Explorer: 6.12%';
            args.accumulation.series[0].dataSource[3].DataLabelMappingName = ej.base.Browser.isDevice ? ' ' : 'Sogou Explorer: 1.73%';
            args.accumulation.series[0].dataSource[4].DataLabelMappingName = ej.base.Browser.isDevice ? ' ' : 'QQ: 3.96%';
            args.accumulation.series[0].dataSource[5].DataLabelMappingName = ej.base.Browser.isDevice ? 'Safari <br> 4.73%' : 'Safari: 4.73%';
            args.accumulation.series[0].dataSource[6].DataLabelMappingName = ej.base.Browser.isDevice ? 'Opera: 3.12%' : 'Opera: 3.12%';
            args.accumulation.series[0].dataSource[7].DataLabelMappingName = ej.base.Browser.isDevice ? 'Edge: 7.48%' : 'Edge: 7.48%';
            args.accumulation.series[0].dataSource[8].DataLabelMappingName = ej.base.Browser.isDevice ? 'Others: 25.39%' : 'Others: 9.57%';
        };
     @*custom code end*@

    </script>
}
