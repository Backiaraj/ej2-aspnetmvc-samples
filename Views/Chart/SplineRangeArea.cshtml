@using Syncfusion.EJ2;
@section ControlsSection{
    <script src="~/Scripts/financial-data.js"></script>
    <div class="control-section">
        <div align="center" style="display:block; width: 92%">

            @Html.EJS().Chart("container-vertical").Series(series =>
       {
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.SplineRangeArea).Border(br => br.Width(2)).Opacity(0.7).XName("x").High("high").Low("low").Marker(mr => mr.Visible(false)).DataSource("chartDataValues").Add();

       }).PrimaryXAxis(px => px.MajorGridLines(mg => mg.Width(0))
           .ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime).LabelFormat("dd MMM")
          ).PrimaryYAxis(py => py.LabelFormat("{value}ËšC").Minimum(-10).Maximum(25).Interval(5).MajorTickLines(mt => mt.Width(0)).LineStyle(ls => ls.Width(0))
          ).Title("Temperature Variation by Month").ChartArea(area => area.Border(br => br.Width(0))).Load("load").Tooltip(tt => tt.Enable(true).Shared(false).Format("Temperature : <b>${point.low} - ${point.high}</b>").Header("<b>${point.x}</b>")).LegendSettings(lg => lg.Visible(false)).Render()

        </div>
    </div>
    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    <script>
        var chartDataValues = chartDataValues;
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Material';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast');
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.primaryXAxis.edgeLabelPlacement = ej.base.Browser.isDevice ? 'Shift' : 'Hide';
        };
    </script>
    @*custom code end*@
}
@*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Spline Range Area in ASP.NET MVC Chart control. Explore here for more details."/>
                }
@*custom code end*@
@section ActionDescription{
    <p>
        This sample shows the monthly difference in temperature between two different countries using the spline range area series in the chart.
    </p>
}
@section Description{
    <p>
        In this example, you can see how to render and configure the spline range area type chart. You can use <code>dashArray</code>, <code>width</code>, <code>fill</code> properties to customize the spline range area. <code>marker</code> and <code>dataLabel</code> are used to represent individual data and its value.
    </p>
    <p>
        Tooltip is enabled in this example, to see the tooltip in action, hover a point or tap on a point in touch enabled devices.
    </p>
    <br>
    <p>
        More information on the spline range area series can be found in this
        <a target="_blank" href="http://ej2.syncfusion.com/documentation/chart/api-series.html#type">documentation section</a>.
    </p>
}
@section Title{
                    <title>ASP.NET MVC Chart Spline Range Area Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Spline Range Area in ASP.NET MVC Chart Control</h1>
                }