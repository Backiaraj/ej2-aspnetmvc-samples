@using Syncfusion.EJ2;
@section ControlsSection{
<div class="control-section">
    <div style="text-align:center">
   @Html.EJS().Chart("container").Series(
    series =>
    {
        series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).
        Name("Warmest").
            XName("xValue").
            YName("yValue1").
            Marker(mr=>mr.Visible(true).Width(10).Height(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Pentagon).DataLabel(dl=>dl.Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Top))).
            DataSource(ViewBag.dataSource).
            Width(2).Add();

        series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).
        Name("Coldest").
            XName("xValue").
            YName("yValue2").
            Marker(mr => mr.Visible(true).Width(10).Height(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Diamond).DataLabel(dl => dl.Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Bottom))).
            DataSource(ViewBag.dataSource).
            Width(2).Add();
    }).PrimaryXAxis(
    xAxis =>
    {
        xAxis.ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime).
         LabelFormat("MMM").
        EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift).
        MajorGridLines(mg=>mg.Width(0));

    }).PrimaryYAxis(
    yAxis =>
    {
        yAxis.Minimum(-20).Maximum(30).Interval(10).EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift).
            LabelFormat("{value}Â°C").
            LineStyle(ls=>ls.Width(0)).
            MajorTickLines(mt=>mt.Width(0)).
            MinorTickLines(mt=>mt.Width(0));
    }).ChartArea(area => area.Border(br=>br.Color("transparent"))).Title("Alaska Weather Statistics - 2016").Load("load").Render()           
    
    </div>
    <div style="float: right; margin-right: 10px;">
        Source:
        <a href="http://www.yr.no/place/USA/Alaska/Hatcher_Pass/statistics.html" target="_blank">www.yr.no</a>
    </div>
</div>

 @*custom code start*@
<style>
    #control-container {
        padding: 0px !important;
    }
</style>
 @*custom code end*@
