@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" style="text-align:center">

        @Html.EJS().Chart("container-vertical").Series(series =>
   {

       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).XName("x").YName("y")
       .Marker(mr=>mr.Visible(true).Height(10).Width(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Diamond).DataLabel(dl=>dl.Name("text")))
       .DataSource(ViewBag.dataSource).Name("December 2007").Width(2).Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).XName("x").YName("y")
       .Marker(mr => mr.Visible(true).Height(10).Width(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Pentagon).DataLabel(dl => dl.Name("text")))
       .DataSource(ViewBag.dataSource1).Name("December 2008").Width(2).Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).XName("x").YName("y")
       .Marker(mr => mr.Visible(true).Height(10).Width(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Triangle).DataLabel(dl => dl.Name("text")))
       .DataSource(ViewBag.dataSource2).Name("December 2009").Width(2).Add();

   }).PrimaryXAxis(px=>px.Interval(1).LabelIntersectAction(Syncfusion.EJ2.Charts.LabelIntersectAction.Rotate45).MajorGridLines(mg=>mg.Width(0)).Title("Countries").ValueType(Syncfusion.EJ2.Charts.ValueType.Category)
       ).PrimaryYAxis(px => px.LabelFormat("{value}%").Minimum(0).Maximum(75).Interval(15).LineStyle(ls=>ls.Width(0)).LabelIntersectAction(Syncfusion.EJ2.Charts.LabelIntersectAction.Rotate45).Title("Penetration")
       ).Tooltip(tr => tr.Enable(true)).ChartArea(area => area.Border(br=>br.Color("transparent"))).LegendSettings(lg => lg.Visible(false)).Title("FB Penetration of Internet Audience").Load("load").Render()
        <div style="float: right; margin-right: 10px;">
            Source:
            <a href="http://www.marketingprofs.com/charts/2012/7064/facebook-stats-five-years-of-worldwide-growth" target="_blank">www.marketingprofs.com</a>
        </div>
    </div>

   @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>

    <script>
       
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Material';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast');
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "60%";
        };
    </script>
           @*custom code end*@
}
   @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Marker Chart in ASP.NET MVC Chart control. Explore here for more details."/>
                }
   @*custom code end*@
@section ActionDescription{
    <p>
    This sample illustrates the rendering of symbols in chart. In line based series, data points can be annotated by using symbols.
</p>
}
@section Description{
    <p>
    Each points in a series can be represented as a symbol through marker. We can also customize the shape, size and color of a symbol through <code>marker</code> properties.
</p>
<p>
    Tooltip is enabled in this example. To see the tooltip in action, hover a point or tap on a point in touch enabled devices.
</p>
<br>

<p>
    More information on the marker can be found in this
    <a target="_blank" href="http://ej2.syncfusion.com/documentation/chart/api-markerOptionModel.html">documentation section</a>.
</p> 
}
@section Title{
                    <title>ASP.NET MVC Chart Marker Chart Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Marker Chart in ASP.NET MVC Chart Control</h1>
                }