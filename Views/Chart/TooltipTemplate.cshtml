@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section">
        <div style="text-align:center">
            @Html.EJS().Chart("container").BackgroundImage("../Content/chart/wheat.png").Series(
             series =>
             {
                 series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).
                 Animation(an => an.Enable(true)).
                 Border(br => br.Width(3)).
                     Fill("#333333").
                     XName("xValue").
                     YName("yValue").
                     Marker(mr=>mr.Visible(true).Border(br => br.Color("#333333").Width(2)).Fill("#C1272D").Width(10).Height(10)).
                     DataSource(ViewBag.dataSource).
                     Width(2).Add();
             }).PrimaryXAxis(
             xAxis =>
             {
                 xAxis.ValueType(Syncfusion.EJ2.Charts.ValueType.Category).
                 LabelStyle(ls => ls.Color("white")).
                 LineStyle(ls =>ls.Color("#EFEFEF")).
                 EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift).
                 MajorTickLines(mt => mt.Width(0)).
                 MajorGridLines(mg => mg.Width(0));

             }).PrimaryYAxis(
             yAxis =>
             {
                 yAxis.Title("Billion Bushels").TitleStyle(ts => ts.Color("white")).
                     RangePadding(Syncfusion.EJ2.Charts.ChartRangePadding.None).
                     LabelStyle(ls => ls.Color("white")).
                     LineStyle(ls => ls.Width(0)).
                     MajorTickLines(mt=>mt.Width(0)).
                     MajorGridLines(mt=>mt.Color("#EFEFEF"));
             }).Tooltip(tp => tp.Enable(true).Template("#Tooltip")).ChartArea(area => area.Border(br=>br.Width(0))).Title("USA Wheat production").TitleStyle(ts => ts.Color("#333333")).Load("load").Render()

        </div>
    </div>
    @*custom code start*@
    <style>

        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script id='Tooltip' type="text/x-template">
        <div id="wrap">
            <table style="width:100%;  border: 1px solid black;" class="table-borderless">
                <tr>
                    <th rowspan="2" style="background-color: #C1272D">
                        <img src="@Url.Content("~/Content/chart/grain.png")" />
                    </th>
                    <td style="height: 25px; width: 50px; background-color: #C1272D; font-size: 14px; color: #E7C554; font-weight: bold; padding-left: 5px">${x}</td>
                </tr>
                <tr>
                    <td style="height: 25px; width: 50px; background-color: #C1272D; font-size: 18px; color: #FFFFFF; font-weight: bold; padding-left: 5px">${y}</td>
                </tr>
            </table>
        </div>
    </script>

    <script>

 @*custom code start*@
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Material';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast');
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "80%";

        };
 @*custom code end*@
    </script>
}
@*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Tooltip Template in ASP.NET MVC Chart control. Explore here for more details."/>
                }
@*custom code end*@
@section ActionDescription{
    <p>
        This sample illustrates tooltip template and background image support in the chart. In this sample, images are placed as templates and background.
    </p>
}
@section Description{
    <p>
        Tooltip template values are displayed in the sample with customization. Background image is rendered to show the background of chart related to wheat.
    </p>
    <br>
    <p>
