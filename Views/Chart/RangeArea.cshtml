@using Syncfusion.EJ2;
@section ControlsSection{
    <script src="~/Scripts/financial-data.js"></script>
    <div class="control-section">
        <div align="center" style="display:block; width: 92%">

        @Html.EJS().Chart("container").Series(series =>
        {
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.RangeArea).Opacity(0.5).Border(br=>br.Width(2)).XName("x").High("high").Low("low").DataSource("chartDataValues").Add();

       }).PrimaryXAxis(px => px.ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime).LabelFormat("dd MMM")
       .MajorGridLines(mg=>mg.Width(0))
       ).PrimaryYAxis(py => py.LabelFormat("{value}ËšC").Maximum(25).Minimum(-10).Interval(5)
       .MajorTickLines(mt=>mt.Width(0)).LineStyle(ls=>ls.Width(0))
       ).Title("Temperature Variation by Month").ChartArea(area => area.Border(br => br.Width(0))
       ).Tooltip(tt => tt.Enable(true).Shared(false).Format("Temperature : <b>${point.low} - ${point.high}</b>").Header("<b>${point.x}</b>")).LegendSettings(lg => lg.Visible(false)).Load("load").Render()

        </div>
    </div>
         @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
             @*custom code end*@
    <script>
                 @*custom code start*@
        var chartDataValues = chartDataValues;
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Material';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast');
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.primaryXAxis.edgeLabelPlacement = ej.base.Browser.isDevice ? 'Shift' : 'Hide';
        };
                 @*custom code end*@
    </script>
}
         @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Range Area in ASP.NET MVC Chart control. Explore here for more details."/>
                }
         @*custom code end*@
@section ActionDescription{
    <p>
    This sample visualizes the maximum and minimum temperatures of different months with default range area series in the chart. Zoom the chart to check the temperature for week or day.
</p>
}
@section Description{
    <p>
    In this example, you can see how to render and configure the range area type chart. You can use <code>border</code> and 
    <code>fill</code> properties to customize the area.
</p>
