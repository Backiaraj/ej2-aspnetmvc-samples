@using Syncfusion.EJ2;
<script src="~/Scripts/StockChartData/aman.js"></script>
@section ControlsSection{
    <div class="control-section">
        @(Html.EJS().StockChart("container").Load("load").Title("AAPL Historical")
                            .Series(sr =>
                            {
                                sr.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).DataSource("data").XName("x").YName("close").Add();
                            })
                            .Render())
    </div>
      @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
        #container {
            display: block;
        }
        #container_stock_border {
            pointer-events: none;
        }
    </style>
      @*custom code end*@
    <script>
        var data = window.aman;
        var load = function (args) {
            args.stockChart.chartArea = { border: { width: 0 } };
            args.stockChart.primaryXAxis = { valueType: 'DateTime', majorGridLines: { width: 0 } };
            args.stockChart.primaryYAxis = {
                lineStyle: { color: 'transparent' },
                majorTickLines: { color: 'transparent', width: 0 },
                stripLines: [{ start: 340, end: 380, color: '#3CB371', opacity: 0.1 }]
            };
            @*custom code start*@
            var selectedTheme = themeName ? themeName : 'Material';
            args.stockChart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast');
             @*custom code end*@
            args.stockChart.indicatorType = [];
            args.stockChart.seriesType = [];
        }
    </script>
}
    @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Plot band in ASP.NET MVC Stock Chart control. Explore here for more details."/>
                }
 @*custom code end*@
@section ActionDescription{
    <p>
        This sample visualizes stock chart with plot line on y axis.
    </p>
}
@section Description{
    <p>
        In this example, you can see how to highlight a particular range in stock chart. Period and range selector help us to navigate different of data.
        <code>AreaSeries</code> is used to represent selected data value.
    </p>
}



@section Title{
                    <title>ASP.NET MVC Stock Chart Plot band Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Plot band in ASP.NET MVC Stock Chart Control</h1>
                }