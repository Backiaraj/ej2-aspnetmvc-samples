    #types {
        background-color: #ffffff;
        border: none;
        border-radius: 2px;
    }

    .inline-element.right.e-btn {
        color: white;
        border: none;
        width: 75px;
    }
    /* custom code start */
    .inline-element {
        display: inline-block;
    }

    .right {
        float: right;
    }
    /* custom code end */
