        border: none;
        padding: 60px 10px 10px 45px;
        font-size: 14px;
    }
    /* custom code start */
    .center {
        text-align: center;
        display: none;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
    
    .sb-content-tab .center {
        display: block;
    }
    /* end of property content styles */
    /* sidebar styles */

    .sb-content-tab #wrapper {
        display: none;
    }
     /* custom code end */
    .content {
        margin-bottom: 20px;
        overflow-y: auto;
    }

    #wrapper #close:before {
        content: "\e945";
    }

    .title-header {
        text-align: center;
        font-size: 18px;
        padding: 15px;
    }

    .sub-title {
        text-align: center;
        font-size: 16px;
        padding: 10px;
    }

    .e-sidebar .title-header #close {
        color: #fafafa;
        cursor: pointer;
        line-height: 25px;
    }

    .e-sidebar.e-left .title-header #close {
        float: right;
    }

    .e-sidebar.e-right .title-header #close {
        float: left;
    }

    #default-sidebar {
        background: #2196f3;
        color: #ffffff;
    }

    #hamburger.menu {
        font-size: 25px;
        cursor: pointer;
        float: left;
        line-height: 50px;
        position: absolute;
        z-index: 1000;
    }

        #hamburger.menu:before {
            content: '\e10d';
        }

        #hamburger.menu.e-rtl {
            position: relative;
            float: right;
        }

    #wrapper #close:before {
        content: "\e109";
    }

    .e-sidebar .title-header #close {
        color: #fafafa;
        cursor: pointer;
        line-height: 25px;
    }

    .e-sidebar.e-left .title-header #close {
        float: right;
    }

    .e-sidebar.e-right .title-header #close {
