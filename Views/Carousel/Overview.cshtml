@using Syncfusion.EJ2
@using Syncfusion.EJ2.Navigations

@section ControlsSection{
    <div class="col-lg-12 control-section overview-carousel-section">
        <div class="e-sample-resize-container carousel-sample">
            <div style="height:calc(100% - 4rem);">
                <div class="carousel-content">
                    <div class="carousel-navigations">
                        <button id="previousBtn" title="Previous" class="carousel-navigation"></button>
                    </div>
                    @(Html.EJS().Carousel("overviewCarousel").CssClass("overview-carousel").Width("calc(100% - 10rem)")
                        .SlideChanging("onSlideChange")
                        .ShowIndicators(false)
                        .ButtonsVisibility(CarouselButtonVisibility.Hidden)
                        .ItemTemplate("#itemTemplate")
                        .DataSource((IEnumerable<object>)ViewBag.dataSource)
                        .Render()
                    )
                    <div class="carousel-navigations">
                        <button id="nextBtn" title="Next" class="carousel-navigation"></button>
                    </div>
                </div>
            </div>
            <div style="height:4rem;">
                <div class="carousel-footer">
                    <div class="indicator-container"></div>
                    <div class="button-container">
                        <button id="playPauseBtn"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id='source_link'>
        Source: &nbsp;
        <table>
            <tr>
                <td>
                    <a href="https://store.google.com/?hl=en-GB" target='_blank'>https://store.google.com</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="https://www.apple.com/in/iphone-13-pro/" target='_blank'>https://www.apple.com</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="https://www.nokia.com/phones/en_in/nokia-xr-20?sku=VMA750B9FI1CN0" target='_blank'>https://www.nokia.com</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="https://www.oneplus.in/oneplus-9rt" target='_blank'>https://www.oneplus.in</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="https://www.samsung.com/in/smartphones/galaxy-s21-5g/" target='_blank'>https://www.samsung.com</a>
                </td>
            </tr>
        </table>
    </div>

    <script id="itemTemplate" type="text/x-template">
        <div class="card">
            <div class="card-body">
                <div class="card-header">
                    <div class="card-title">${title}</div>
                </div>
                <div class="card-content">
                    <div class="card-left-content">
                        <div class="img-container" style="background-image: url(${imageUrl})">
                            <img src=${imageUrl} alt=${title} style="height:100%; width: 100%" />
                        </div>
                    </div>
                    <div class="card-right-content">
                        <table>
                            <thead>
                                <tr>
                                    <td class="card-text" colSpan="2">Product Details</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Model</td>
                                    <td>${model}</td>
                                </tr>
                                <tr>
                                    <td>Brand</td>
                                    <td>${brand}</td>
                                </tr>
                                <tr>
                                    <td>RAM</td>
                                    <td>${ram}</td>
                                </tr>
                                <tr>
                                    <td>ROM</td>
                                    <td>${rom}</td>
                                </tr>
                                <tr>
                                    <td>Platform</td>
                                    <td>${platform}</td>
                                </tr>
                                <tr>
                                    <td>Version</td>
                                    <td>${version}</td>
                                </tr>
                                <tr>
                                    <td>Launched on</td>
                                    <td>${releaseDate}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </script>

    <script type="text/javascript">
        function onSlideChange(args) {
            var indicators = [].slice.call(document.querySelectorAll('.indicator'));
            ej.base.removeClass(indicators, 'active-indicator');
            ej.base.addClass([indicators[args.nextIndex]], 'active-indicator');
        }

        document.addEventListener('DOMContentLoaded', function () {
            var carouselObj = document.querySelector('.e-carousel').ej2_instances[0];
            var previousBtn = new ej.buttons.Button({ cssClass: 'e-flat e-round', iconCss: 'e-icons e-arrow-left' }, '#previousBtn');
            previousBtn.element.onclick = function () {
                carouselObj.prev();
            };

            var nextBtn = new ej.buttons.Button({ cssClass: 'e-flat e-round', iconCss: 'e-icons e-arrow-right' }, '#nextBtn');
            nextBtn.element.onclick = function () {
                carouselObj.next();
            };

            var playPauseBtn = new ej.buttons.Button({ cssClass: 'e-flat e-round', iconCss: 'e-icons e-pause', isToggle: true }, '#playPauseBtn');
            playPauseBtn.element.onclick = function () {
                var carouselObj = document.querySelector('.e-carousel').ej2_instances[0];
                carouselObj.autoPlay = !playPauseBtn.element.classList.contains('e-active');
                carouselObj.dataBind();
                playPauseBtn.iconCss = playPauseBtn.element.classList.contains('e-active') ? 'e-icons e-play' : 'e-icons e-pause';
            };

            var indicatorContainer = document.querySelector('.indicator-container');
            carouselObj.dataSource.forEach(function (data, index) {
                var indicator = ej.base.createElement('button', { className: "indicator " + (!index ? 'active-indicator' : ''), attrs: { 'data-index': index.toString() } });
                indicatorContainer.appendChild(indicator);
                new ej.buttons.Button({ cssClass: 'e-flat e-round' }, indicator);
                indicator.addEventListener('click', function (e) {
                    carouselObj.selectedIndex = parseInt(e.target.dataset.index, 10);
                    carouselObj.dataBind();
                });
            });
        })
    </script>
}

@section ActionDescription{
    <p>
        This sample demonstrates the basic rendering of the <strong>ASP.NET MVC Carousel</strong> component with items.
    </p>
}

@section Description{
    <p>
        The <code>ASP.NET MVC Carousel</code> component is commonly used as a slideshow of images and contents. In this demo,
        the external navigators and indicators are rendered outside the carousel by hiding the default navigators and
        indicators using
        <code>ButtonsVisibility</code> and <code>showIndicators</code> properties.The slide items are rendered using
        <code>dataSource</code> and customized using <code>itemTemplate</code>.
    </p>
    <p>
        The external navigation of slide items is handled using public methods <code>prev</code> and <code>next</code> and
        changing <code>selectedIndex</code> property.
    </p>
    <p>
        More information about ASP.NET MVC Carousel component can be found in this <a target='_blank' href="https://ej2.syncfusion.com/documentation/carousel/getting-started/">documentation section</a>.
    </p>
}

